<UserControl x:Class="WPFScadaDashboard.DashboardUserControls.LinePlotCellUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFScadaDashboard.DashboardUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500" Grid.Column="{Binding ColumnIndex}" Grid.Row="{Binding RowIndex}" Width="{Binding CellWidth}" Height="{Binding CellHeight}" MinHeight="{Binding CellMinHeight}" MinWidth="{Binding CellMinWidth}">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid x:Name="CellContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding CellTitle}"></TextBlock>
        </Grid>
    </Border>
</UserControl>
