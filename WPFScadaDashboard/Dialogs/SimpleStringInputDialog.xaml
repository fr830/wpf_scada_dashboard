<Window x:Class="WPFScadaDashboard.Dialogs.SimpleStringInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFScadaDashboard.Dialogs"
        mc:Ignorable="d"
        Title="{Binding PromptTitleBarText}" Height="200" Width="200">
    <StackPanel Margin="15">
        <TextBlock Margin="10" Text="{Binding PromptText}" FontWeight="Bold" TextAlignment="Center"/>
        <TextBox Margin="10" x:Name="ResponseTextBox" TextAlignment="Center"/>
        <Button Margin="10" Content="OK" Click="OKButton_Click" />
    </StackPanel>
</Window>
